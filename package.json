{
  "name": "uefs-api-gateway",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "https://github.com/deusilva/uefs-api-gateway.git",
  "license": "MIT",
  "scripts": {
    "dev": "tsnd --poll --exit-child --respawn --transpile-only --ignore-watch node_modules --no-notify src/index.ts",
    "dev:debug": "tsnd --inspect-brk --poll --exit-child --respawn --transpile-only --ignore-watch node_modules --no-notify src/index.ts",
    "prod": "yarn build && yarn start",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "node dist/index.js",
    "test": "jest --clearCache && jest --detectOpenHandles --forceExit",
    "test:debug": "jest --clearCache && node --inspect-brk node_modules/.bin/jest --runInBand --detectOpenHandles --forceExit --verbose"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/bcrypt": "^3.0.0",
    "@types/hapi__hapi": "^20.0.1",
    "@types/hapi__inert": "^5.2.1",
    "@types/hapi__vision": "^5.5.2",
    "@types/jest": "^26.0.14",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.11.5",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.10.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.5.2",
    "mongodb-memory-server": "^6.9.1",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/hapi": "^20.0.1",
    "@hapi/inert": "^6.0.3",
    "@hapi/jwt": "^2.0.1",
    "@hapi/vision": "^6.0.1",
    "bcrypt": "^5.0.0",
    "dotenv-safe": "^8.2.0",
    "hapi-auth-jwt2": "^10.2.0",
    "hapi-swagger": "^14.0.0",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.8",
    "mongoose-paginate-ts": "^1.1.0",
    "uuidv4": "^6.2.4",
    "validator": "^13.1.17"
  }
}
